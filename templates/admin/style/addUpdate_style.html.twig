{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="pt-2 text-center">
        {% if app.request.attributes.get('_route') == "admin_styles_add" %}
            Ajout
        {% else %}
            Modification
        {% endif %}
        d'un style
    </h1>
    {{ form_start(formStyle) }}
    <div class="row">
        <div class="col-8">{{ form_row(formStyle.name) }}</div>
        <div class="col-4">{{ form_row(formStyle.color) }}</div>
    </div>

    <div class="row">
        <div class="col">
            <input type="submit" class="btn btn-success w-100" value="Valider {% if app.request.attributes.get('_route') == "admin_style_update" %}les modifications{% endif %}">
        </div>
        <div class="col">
            <a href="{{ path('admin_styles') }}" class="btn btn-warning w-100">Annuler</a>
        </div>
    </div>

    {{ form_end(formStyle) }}
{% endblock %}

{% block title %}
    {% if app.request.attributes.get('_route') == "admin_styles_add" %}
        Ajout
    {% else %}
        Modification
    {% endif %}
    d'un style
{% endblock %}

